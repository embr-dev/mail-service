    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20240729.0",
        "@swc/cli": "^0.4.0",
        "typescript": "^5.5.4",
        "wrangler": "^3.60.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/embr-dev/mail-service.git"
    },
