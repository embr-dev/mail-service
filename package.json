{
    "name": "mail-service",
    "version": "1.0.0",
    "description": "A lightweight server and api to send emails utilizing cloudflare workers.",
    "author": "Embr Development Group",
    "type": "module",
    "types": "./dist/index.d.ts",
    "main": "./dist/index.js",
    "scripts": {
        "worker deploy": "node deploy",
        "worker dev": "wrangler dev",
